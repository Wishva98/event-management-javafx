<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <top>
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2a2a2a; -fx-padding: 15;">
      <Label fx:id="lblWelcome" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" text="Welcome," />
      <Region HBox.hgrow="ALWAYS" />
         <MenuButton fx:id="menuProfile" mnemonicParsing="false" style="-fx-background-color: #00ff83; -fx-text-fill: black; -fx-font-weight: bold;" text="Profile">
           <items>
             <MenuItem fx:id="btnEditProfile" mnemonicParsing="false" text="Edit Profile" />
             <MenuItem fx:id="btnPastOrders" mnemonicParsing="false" text="Past Orders" />
           </items>
         </MenuButton>
         <Button fx:id="btnLogout" layoutX="720.0" layoutY="26.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
         <Region layoutX="130.0" layoutY="25.0" />
    </HBox>
  </top>

  <center>
    <VBox spacing="10" style="-fx-padding: 15;">
      <HBox alignment="CENTER_LEFT" spacing="10">
        <Text style="-fx-font-size: 18; -fx-font-weight: bold;" text="Available Events" />
        <Region HBox.hgrow="ALWAYS" />
      </HBox>

      <TableView fx:id="tblEvents" style="-fx-pref-height: 400;">
        <columns>
          <TableColumn fx:id="colEvent" editable="false" prefWidth="150" text="Event" />
          <TableColumn fx:id="colVenue" editable="false" prefWidth="120" text="Venue" />
          <TableColumn fx:id="colDay" editable="false" prefWidth="100" text="Day" />
          <TableColumn fx:id="colPrice" editable="false" prefWidth="81.0" text="Price" />
        </columns>
      </TableView>

      <HBox alignment="CENTER" spacing="40.0">
            <Spinner fx:id="spnQty" />
            <Button fx:id="btnAddToCart" layoutX="391.0" layoutY="10.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Add to Cart" />
            <Button fx:id="btnRemoveFromCart" layoutX="296.0" layoutY="10.0" style="-fx-background-color: red; -fx-text-fill: white;" text="Remove" />
      </HBox>
    </VBox>
  </center>
   <right>
    <VBox prefWidth="300" spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 15;" BorderPane.alignment="CENTER">

      <Text style="-fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" text="My Cart" />
      <Separator />

      <ListView fx:id="lvlCart" style="-fx-background-color: white; -fx-pref-height: 200; -fx-font-family: 'Courier New'; -fx-font-weight: bold;" />

      <HBox fx:id="hbxTotal" alignment="CENTER_RIGHT" spacing="10">
        <Label fx:id="lblTotal" style="-fx-font-weight: bold;" text="Total:" />
      </HBox>
         <HBox alignment="CENTER" spacing="20.0">
            <children>
           <Button fx:id="btnEditItem" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Edit" />
      
            <Button fx:id="btnCheckout" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Checkout" />
            </children>
         </HBox>
    </VBox>
   </right>
</BorderPane>
